# 環境設定ファイル
# 実際の使用時は .env にコピーして値を設定

# 言語・地域設定
LANG=ja_JP.UTF-8
LC_ALL=ja_JP.UTF-8
TZ=Asia/Tokyo
DEFAULT_LANGUAGE=ja

# アプリケーション設定
DEBUG=false
LOG_LEVEL=INFO

# Google Cloud設定
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# API設定
GEMINI_API_KEY=your-gemini-api-key
SERPAPI_KEY=your-serpapi-key

# データベース設定
FIRESTORE_COLLECTION=schedules

# 日本語処理設定
NORMALIZE_TEXT=true
AUTO_DETECT_ENCODING=true
JAPANESE_DATE_FORMAT=true